{
  "name": "ts-extension-starter",
  "version": "1.0.0",
  "description": "A starter repo for building Chrome browser extensions in v3 manifest using Typescript and Rollup.",
  "license": "MIT",
  "author": "Wen Bin",
  "scripts": {
    "build": "rollup -c",
    "release": "cross-env NODE_ENV=production rollup -c",
    "start": "rollup -c -w",
    "prepare": "husky install",
    "commit": "cz"
  },
  "dependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/chrome": "^0.0.180",
    "@types/firefox-webext-browser": "^82.0.0",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.14.38",
    "eslint": "^7.16.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.2",
    "prettier": "^2.2.1",
    "rollup": "^2.56.3",
    "rollup-plugin-chrome-extension": "^3.6.8",
    "rollup-plugin-empty-dir": "^1.0.5",
    "rollup-plugin-zip": "^1.0.3",
    "tslib": "^2.0.3",
    "typescript": "^4.6.0",
    "webextension-polyfill": "^0.7.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "bash -c tsc"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
